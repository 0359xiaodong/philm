<resources>

    <style name="Widget.Philm.ActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:indeterminateProgressStyle">@style/Widget.Philm.ActionBar.Progress</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="Widget.Philm.Dark.ActionBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:indeterminateProgressStyle">@style/Widget.Philm.ActionBar.Progress</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="Widget.Philm.ActionBar.Progress" parent="@android:style/Widget.Material.Light.ProgressBar">
    </style>

    <style name="Widget.Philm.ProgressBar" parent="android:Widget.Material.Light.ProgressBar.Horizontal">
        <item name="spb_color">@color/primary_accent_color</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="Widget.Philm.RatingBar" parent="android:Widget.Material.Light.RatingBar">
    </style>

    <style name="Widget.Philm.AutoCompleteTextView"
           parent="android:Widget.Material.Light.AutoCompleteTextView">
    </style>

</resources>
