<resources>

    <style name="Theme.Base.Philm" parent="android:Theme.Holo">
    </style>


    <style name="Theme.Philm" parent="Theme.Base.Philm">
        <item name="android:actionBarStyle">@style/Widget.Philm.ActionBar</item>
    </style>

    <style name="Widget.Philm.ActionBar" parent="android:Widget.Holo.ActionBar.Solid">
    </style>

    <style name="TextAppearance.Philm.Light" parent="android:TextAppearance" />

    <style name="TextAppearance.Philm.Serif" parent="android:TextAppearance" />

    <style name="TextAppearance.Philm.Condensed" parent="android:TextAppearance" />

    <style name="TextAppearance.Philm.Movie.Title" parent="TextAppearance.Philm.Condensed">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextAppearance.Philm.Movie.Rating" parent="TextAppearance.Philm.Condensed">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Philm.Movie.ListSection" parent="TextAppearance.Philm.Condensed">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextAppearance.Philm.Movie.Detail.Title" parent="TextAppearance.Philm.Condensed">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Summary" parent="android:Widget">
        <item name="android:textAppearance">@style/TextAppearance.Philm.Serif</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">@dimen/spacing_minor</item>
        <item name="android:maxLines">@integer/default_summary_maxlines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
