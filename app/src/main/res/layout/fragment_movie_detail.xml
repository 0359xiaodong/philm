<?xml version="1.0" encoding="utf-8"?>

<app.philm.in.view.ParallaxContentScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageview_fanart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/side_menu_background">

        <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.Philm.Movie.Title"/>

        <View android:layout_height="800dp"
              android:layout_width="match_parent" />

    </LinearLayout>

</app.philm.in.view.ParallaxContentScrollView>