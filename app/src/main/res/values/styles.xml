<resources>

    <style name="Theme.Base.Philm" parent="android:Theme.Holo">
    </style>


    <style name="Theme.Philm" parent="Theme.Base.Philm">
        <item name="android:actionBarStyle">@style/Widget.Philm.ActionBar</item>
    </style>

    <style name="Widget.Philm.ActionBar" parent="android:Widget.Holo.ActionBar.Solid">
    </style>

    <style name="Widget.Philm.Movie.List.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">20dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.Philm.Movie.List.Subtitle" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.Philm.Movie.List.SectionHeader" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">@dimen/spacing_micro</item>
        <item name="android:paddingLeft">@dimen/spacing_major</item>
        <item name="android:background">@color/primary_accent_color</item>

    </style>

    <style name="Widget.Philm.Movie.Login.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">@dimen/movie_detail_title_textsize</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">@dimen/movie_detail_title_textsize</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Summary" parent="android:Widget">
        <item name="font">roboto_slab</item>
        <item name="android:textSize">@dimen/movie_detail_summary_textsize</item>
        <item name="android:padding">@dimen/spacing_minor</item>
        <item name="android:maxLines">@integer/default_summary_maxlines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Ratings.Title" parent="android:Widget">
        <item name="font">roboto_light</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Ratings.Votes" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Rating.Description" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">22dp</item>
    </style>


</resources>
